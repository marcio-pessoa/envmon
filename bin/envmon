#!/bin/sh
#
# envmon, envmon Mark II - Environment Monitor
# Service manager
#
# Author: MÃ¡rcio Pessoa <marcio.pessoa@sciemon.com>
# Contributors: none
#
# Description:
#
# Example: 
#   /opt/envmon/bin/envmon start
#
# Tip: 
#   Add this script to cron job.
#
# Change log
# 2016-07-30
#         Added bridge management support.
#
# 2016-06-04
#         Minor bug fixes.
#         Added proc id to status information.
#
# 2016-06-03
#         Experimental version.
#

PROGRAM_NAME="envmon"
WORK_DIR='/opt/envmon'
WORK_FILE='envmon.pyc'
LOG_FILE='event.log'

bridge_proc_id() {
  state=$(pgrep -f "python -u bridge.py")
  if [ "$state" = "" ]; then
    state=0
  fi
  echo "$state"
}

bridge_status() {
  id=$(bridge_proc_id)
  if [ "$id" -gt "0" ]; then
    echo "Running ($id)"
    exit 0
  else
    echo "Stopped"
    exit 2
  fi
}

bridge_start() {
  id=$(bridge_proc_id)
  if [ "$id" -gt "0" ]; then
    echo "Nothing to do, because bridge is already running."
    exit 0
  fi
  echo "Starting..."
  /usr/bin/reset-mcu
  exit $?
}

bridge_stop() {
  id=$(bridge_proc_id)
  if [ "$id" -gt "0" ]; then
    echo "Stopping..."
    /usr/bin/kill-bridge 2>&1 /dev/null
  else
    echo "Nothing to do, because bridge is not running."
  fi
}

envmon_proc_id() {
  state=$(pgrep -f "$WORK_DIR/bin/$WORK_FILE")
  if [ "$state" = "" ]; then
    state=0
  fi
  echo "$state"
}

envmon_status() {
  id=$(envmon_proc_id)
  if [ "$id" -gt "0" ]; then
    echo "Running ($id)"
    exit 0
  else
    echo "Stopped"
    exit 2
  fi
}

envmon_start() {
  id=$(envmon_proc_id)
  if [ "$id" -gt "0" ]; then
    echo "Nothing to do, because $PROGRAM_NAME is already running."
    exit 1
  fi
  echo "Starting..."
  python "$WORK_DIR/bin/$WORK_FILE" --config /opt/envmon/cfg/config.json \
                                    --device 127.0.0.1:6571 \
                                    --bind 127.0.0.1 \
                                    --verbose \
                                    2>&1 | tee -a "$WORK_DIR/log/$LOG_FILE" \
                                    #> /dev/null &
  exit $?
}

envmon_stop() {
  id=$(envmon_proc_id)
  if [ "$id" -gt "0" ]; then
    echo "Stopping..."
    kill -9 "$id"
  else
    echo "Nothing to do, because $PROGRAM_NAME is not running."
  fi
}

case "$1" in
  start)
    # bridge_start
    envmon_start
    ;;
  stop)
    # bridge_stop
    envmon_stop
    ;;
  restart)
    # bridge_stop
    # bridge_start
    # sleep 3
    # envmon_stop
    envmon_start
    ;;
  status)
    # bridge_status
    envmon_status
    ;;
  *)
    echo "Usage: $PROGRAM_NAME {start|stop|restart|status}" >&2
    exit 3
    ;;
esac
